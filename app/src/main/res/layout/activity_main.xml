<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bgr">

    <TextView
        android:id="@+id/current_formula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currentScore"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/previous_formula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/currentScore"
        android:textColor="#00FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/first_choice_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/choice1"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:onClick="choicePressed"
                android:text="@string/button_sescription" />

            <Button
                android:id="@+id/choice2"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:onClick="choicePressed"
                android:text="@string/button_sescription" />

            <Button
                android:id="@+id/choice3"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:onClick="choicePressed"
                android:text="@string/button_sescription" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_choice_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/choice4"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:onClick="choicePressed"
                android:text="@string/button_sescription" />

            <Button
                android:id="@+id/choice5"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:onClick="choicePressed"
                android:text="@string/button_sescription" />

            <Button
                android:id="@+id/choice6"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:onClick="choicePressed"
                android:text="@string/button_sescription" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/game_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="96sp"
        app:layout_constraintBottom_toTopOf="@+id/current_formula"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:max="100"
        android:progress="0"
        app:layout_constraintBottom_toTopOf="@+id/game_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>